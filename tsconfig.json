{
  "compilerOptions": {
    "incremental": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "resolveJsonModule": true,
    "target": "ES2021",
    "experimentalDecorators": true,
    "module": "commonjs",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  },
  "baseUrl": "./",
  "paths": {
    "@/*": [
      "src/*"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "./build",
    "./node_modules"
  ]
}